<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurguerApp.HamburTradPage"
             Title="HamburTradPage"
             BackgroundColor="#F5F5F5">
    <ScrollView>
        <StackLayout>
            <StackLayout BackgroundColor="#432616"
                         Padding="10">
                <Grid BackgroundColor="#432616"
                      VerticalOptions="CenterAndExpand"
                      HorizontalOptions="CenterAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="logo.jpg"
                           Aspect="AspectFill"
                           HeightRequest="90"
                           WidthRequest="90"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="Start"
                           Margin="0,0,10,10"/>

                    <Label Grid.Column="1"
                           Text="2D BURGUER"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="LightYellow"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="StartAndExpand"
                           HorizontalTextAlignment="Start"
                           Margin="10,0,0,10"/>
                </Grid>

                <!-- Nombre del Usuario -->
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="Username"
                            Text="Cliente"
                            VerticalOptions="CenterAndExpand"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="White"/>
                    <Button Text="Salir"
                            FontSize="14"
                            Margin="15,0,10,0"
                            FontAttributes="Bold"
                            BackgroundColor="#874421"
                            Clicked="OnClickLogout"/>
                </StackLayout>

                <!-- Menu de Opciones -->
                <ScrollView Orientation="Horizontal">
                    <StackLayout Orientation="Horizontal"
                             HorizontalOptions="CenterAndExpand"
                             Spacing="10"
                             Margin="0,10,0,0"
                             BackgroundColor="White">
                        <Button Text="Inicio"
                            TextColor="Black"
                            Clicked="OnClickInicio"
                            FontAttributes="Bold"
                            BackgroundColor="White"
                            BorderColor="White"/>

                        <Button Text="Acerca de"
                            TextColor="Black"
                            Clicked="OnClickAcerca"
                            FontAttributes="Bold"
                            BackgroundColor="White"
                            BorderColor="White"/>
                        <Button Text="Contacto"
                            TextColor="Black"
                            Clicked="OnClickContacto"
                            FontAttributes="Bold"
                            BackgroundColor="White"
                            BorderColor="White"/>
                        <Button Text="Menú"
                            TextColor="Black"
                            Clicked="OnClickMenu"
                            FontAttributes="Bold"
                            BackgroundColor="White"
                            BorderColor="White"/>
                        <Button Text="Reseñas"
                            TextColor="Black"
                            Clicked="OnClickTestimonio"
                            FontAttributes="Bold"
                            BackgroundColor="White"
                            BorderColor="White"/>
                    </StackLayout>
                </ScrollView>
            </StackLayout>
            <!-- Menu Principal -->
            <StackLayout Padding="10"
                         Spacing="10"
                         BackgroundColor="#907767">
                <Label Text="Menú Principal / Combos"
                       FontSize="30"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"/>

                <Label Text="Este menú ofrece una combinación de hamburguesas clásicas, opciones gourmet, acompañamientos deliciosos, una variedad de bebidas y postres tentadores para satisfacer diferentes gustos y preferencias."
                       TextColor="Black"
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,10"/>
            </StackLayout>

            <!-- Menu de Opciones -->
            <ScrollView Orientation="Horizontal"
                        BackgroundColor="#432616">
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="CenterAndExpand"
                             Spacing="10"
                             Margin="0,0,0,0"
                             BackgroundColor="#432616"
                             Padding="10">
                    <Button Text="Hamburguesas Tradicionales"
                            TextColor="Black"
                            Clicked="OnClickHamburguesas"
                            FontAttributes="Bold"
                            BackgroundColor="Beige"
                            BorderColor="Black"
                            BorderWidth="2"/>
                    <Button Text="Acompañamientos"
                            TextColor="Black"
                            Clicked="OnClickAcompaniamientos"
                            FontAttributes="Bold"
                            BackgroundColor="Beige"
                            BorderColor="Black"
                            BorderWidth="2"/>
                    <Button Text="Bebidas"
                            TextColor="Black"
                            Clicked="OnClickBebidas"
                            FontAttributes="Bold"
                            BackgroundColor="Beige"
                            BorderColor="Black"
                            BorderWidth="2"/>
                    <Button Text="Postres"
                            TextColor="Black"
                            Clicked="OnClickPostres"
                            FontAttributes="Bold"
                            BackgroundColor="Beige"
                            BorderColor="Black"
                            BorderWidth="2"/>
                    <Button Text="Combos"
                            TextColor="Black"
                            Clicked="OnClickCombos"
                            FontAttributes="Bold"
                            BackgroundColor="Beige"
                            BorderColor="Black"
                            BorderWidth="2"/>
                    <Button Text="Ver Carrito"
                            TextColor="Black"
                            Clicked="OnClickCarrito"
                            FontAttributes="Bold"
                            BackgroundColor="Beige"
                            BorderColor="Black"
                            BorderWidth="2"/>
                </StackLayout>
            </ScrollView>

            <!-- Hamburguesas Tradicionales -->
            <StackLayout Padding="20" 
                         Spacing="10"
                         BackgroundColor="#C57D56">
                <BoxView Color="Black"
                         HeightRequest="2"/>
                <Label Text="Hamburguesas Tradicionales"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Black"/>
                <BoxView Color="Black"
                         HeightRequest="2"
                         Margin="0,0,0,10"/>
                <StackLayout Orientation="Horizontal"
                             Spacing="10">
                    <Image Source="hamburguesa.jpg"
                           Aspect="AspectFill"
                           HeightRequest="90"
                           WidthRequest="80"/>
                    <StackLayout HorizontalOptions="FillAndExpand">
                        <Label Text="Hamburguesa Clásica"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"/>
                        <Label Text="Precio: $3"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black"/>
                        <Label Text="Carne jugosa, queso cheddar fundido y la frescura crujiente de lechuga, tomate y cebolla."
                               FontSize="15"
                               TextColor="Black"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>